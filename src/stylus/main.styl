/**
 * Variables
 **/
colorText = #eaeef3
colorBackground = #4a4c55
colorHighlight = #3388c4

/**
 * Base
 */
body
	margin 0
	background colorBackground
	color colorText
	font 400 16px/1.5em "Segoe UI", "Helvetica Neue", Roboto, Arial, sans-serif

.tabs
	&-nav
		&-list
			margin 2px 1px
			padding 0
			display flex
			list-style none

		&-item
			flex 1 1 auto
			margin 0 1px

		&-link
			display block
			text-decoration none
			font-size 1.25em
			color colorText
			background colorHighlight
			padding 16px 20px
			font-weight 200
			text-align center

			&:hover
			&:focus
				background darken(colorHighlight, 30%)

				.active &
					background lighten(colorHighlight, 80%)

			.active &
				background colorText
				color colorHighlight

	&-content
		margin 40px auto
		max-width 780px
		padding 0 40px

		&-title
			font-weight 100
			font-size 3em
			line-height 1
			margin 0 0 15px

		&-item
			text-align justify